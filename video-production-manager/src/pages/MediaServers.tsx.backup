import React, { useState } from 'react';
import { Plus, Edit2, Trash2, Monitor, Server, Layers } from 'lucide-react';
import { Card, Badge } from '@/components/ui';
import { useProductionStore } from '@/hooks/useStore';
import type { MediaServer, MediaServerOutput, MediaServerLayer } from '@/types';
import { MEDIA_SERVER_PLATFORMS, OUTPUT_TYPES } from '@/types/mediaServer';

export default function MediaServers() {
  const { mediaServers, addMediaServer, updateMediaServer, deleteMediaServer } = useProductionStore();
  const [isModalOpen, setIsModalOpen] = useState(false);
  const [editingServer, setEditingServer] = useState<MediaServer | null>(null);
  const [searchQuery, setSearchQuery] = useState('');

  const filteredServers = React.useMemo(() => {
    if (!searchQuery) return mediaServers;
    const query = searchQuery.toLowerCase();
    return mediaServers.filter(server => 
      server.name.toLowerCase().includes(query) ||
      server.platform.toLowerCase().includes(query) ||
      server.role.toLowerCase().includes(query)
    );
  }, [mediaServers, searchQuery]);

  const handleAddNew = () => {
    setEditingServer(null);
    setIsModalOpen(true);
  };

  const handleEdit = (server: MediaServer) => {
    setEditingServer(server);
    setIsModalOpen(true);
  };

  const handleDelete = (id: string) => {
    if (confirm('Are you sure you want to delete this media server?')) {
      deleteMediaServer(id);
    }
  };

  return (
    <div className="space-y-6">
      {/* Header */}
      <div className="flex items-center justify-between">
        <div>
          <h1 className="text-3xl font-bold text-av-text mb-2">Media Servers</h1>
          <p className="text-av-text-muted">Manage media playback servers, outputs, and content layers</p>
        </div>
        <button onClick={handleAddNew} className="btn-primary flex items-center gap-2">
          <Plus className="w-4 h-4" />
          Add Server
        </button>
      </div>

      {/* Statistics */}
      <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
        <Card className="p-6">
          <p className="text-sm text-av-text-muted mb-1">Total Servers</p>
          <p className="text-3xl font-bold text-av-text">{mediaServers.length}</p>
        </Card>
        <Card className="p-6">
          <p className="text-sm text-av-text-muted mb-1">Main Servers</p>
          <p className="text-3xl font-bold text-av-accent">
            {mediaServers.filter(s => s.role === 'main').length}
          </p>
        </Card>
        <Card className="p-6">
          <p className="text-sm text-av-text-muted mb-1">Total Outputs</p>
          <p className="text-3xl font-bold text-av-info">
            {mediaServers.reduce((sum, s) => sum + s.outputs.length, 0)}
          </p>
        </Card>
      </div>

      {/* Search */}
      <Card className="p-4">
        <input
          type="text"
          placeholder="Search media servers..."
          value={searchQuery}
          onChange={(e) => setSearchQuery(e.target.value)}
          className="input-field w-full"
        />
      </Card>

      {/* Servers List */}
      {filteredServers.length === 0 ? (
        <Card className="p-12 text-center">
          <Server className="w-16 h-16 mx-auto text-av-text-muted mb-4" />
          <h3 className="text-lg font-semibold text-av-text mb-2">No Media Servers Found</h3>
          <p className="text-av-text-muted mb-4">
            {mediaServers.length === 0 
              ? 'Add your first media server to get started'
              : 'No media servers match your search criteria'
            }
          </p>
          {mediaServers.length === 0 && (
            <button onClick={handleAddNew} className="btn-primary">Add Media Server</button>
          )}
        </Card>
      ) : (
        <div className="space-y-4">
          {filteredServers.map((server) => (
            <Card key={server.id} className="p-6 hover:border-av-accent/30 transition-colors">
              {/* Server Header */}
              <div className="flex items-start justify-between mb-4">
                <div className="flex items-center gap-4">
                  <Server className="w-6 h-6 text-av-accent" />
                  <div>
                    <h3 className="text-xl font-semibold text-av-text">{server.name}</h3>
                    <p className="text-sm text-av-text-muted">{server.platform}</p>
                  </div>
                </div>
                <div className="flex items-center gap-2">
                  <Badge variant={server.role === 'main' ? 'success' : 'warning'}>
                    {server.role}
                  </Badge>
                  <button
                    onClick={() => handleEdit(server)}
                    className="p-2 rounded-md hover:bg-av-surface-light text-av-text-muted hover:text-av-accent transition-colors"
                    title="Edit"
                  >
                    <Edit2 className="w-4 h-4" />
                  </button>
                  <button
                    onClick={() => handleDelete(server.id)}
                    className="p-2 rounded-md hover:bg-av-surface-light text-av-text-muted hover:text-av-danger transition-colors"
                    title="Delete"
                  >
                    <Trash2 className="w-4 h-4" />
                  </button>
                </div>
              </div>

              {/* Outputs */}
              {server.outputs.length > 0 && (
                <div className="mb-4">
                  <div className="flex items-center gap-2 mb-3">
                    <Monitor className="w-4 h-4 text-av-text-muted" />
                    <h4 className="text-sm font-semibold text-av-text">Outputs ({server.outputs.length})</h4>
                  </div>
                  <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
                    {server.outputs.map((output) => (
                      <div key={output.id} className="bg-av-surface-light p-3 rounded-md">
                        <div className="flex items-center justify-between mb-1">
                          <span className="text-sm font-medium text-av-text">{output.name}</span>
                          <Badge>{output.type}</Badge>
                        </div>
                        {output.resolution && (
                          <span className="text-xs text-av-text-muted">
                            {output.resolution.width}x{output.resolution.height}
                            {output.frameRate && `@${output.frameRate}Hz`}
                          </span>
                        )}
                      </div>
                    ))}
                  </div>
                </div>
              )}

              {/* Layers */}
              {server.layers.length > 0 && (
                <div>
                  <div className="flex items-center gap-2 mb-3">
                    <Layers className="w-4 h-4 text-av-text-muted" />
                    <h4 className="text-sm font-semibold text-av-text">Content Layers ({server.layers.length})</h4>
                  </div>
                  <div className="space-y-2">
                    {server.layers.map((layer) => (
                      <div key={layer.id} className="bg-av-surface-light p-3 rounded-md">
                        <div className="flex items-start justify-between">
                          <div className="flex-1">
                            <div className="flex items-center gap-2 mb-1">
                              <span className="text-sm font-medium text-av-text">{layer.name}</span>
                              {layer.spanning && (
                                <Badge variant="warning">Spanning</Badge>
                              )}
                            </div>
                            <p className="text-xs text-av-text-muted mb-2">{layer.content}</p>
                            <div className="flex flex-wrap gap-1">
                              {layer.outputIds.map(outputId => {
                                const output = server.outputs.find(o => o.id === outputId);
                                return output ? (
                                  <span key={outputId} className="text-xs bg-av-surface px-2 py-1 rounded text-av-text-muted">
                                    {output.name}
                                  </span>
                                ) : null;
                              })}
                            </div>
                          </div>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              )}

              {server.note && (
                <div className="mt-4 pt-4 border-t border-av-border">
                  <p className="text-sm text-av-text-muted">
                    <span className="font-medium">Note:</span> {server.note}
                  </p>
                </div>
              )}
            </Card>
          ))}
        </div>
      )}

      {/* Results Count */}
      {filteredServers.length > 0 && (
        <div className="text-center text-sm text-av-text-muted">
          Showing {filteredServers.length} server{filteredServers.length !== 1 ? 's' : ''}
        </div>
      )}

      {/* Form Modal */}
      {isModalOpen && (
        <MediaServerModal
          isOpen={isModalOpen}
          onClose={() => {
            setIsModalOpen(false);
            setEditingServer(null);
          }}
          onSave={(server) => {
            if (editingServer) {
              updateMediaServer(editingServer.id, server);
            } else {
              const newServer: MediaServer = {
                ...server,
                id: `MS${String(mediaServers.length + 1).padStart(2, '0')}`
              };
              addMediaServer(newServer);
            }
            setIsModalOpen(false);
            setEditingServer(null);
          }}
          editingServer={editingServer}
        />
      )}
    </div>
  );
}

// Modal Component
interface MediaServerModalProps {
  isOpen: boolean;
  onClose: () => void;
  onSave: (server: Omit<MediaServer, 'id'>) => void;
  editingServer: MediaServer | null;
}

function MediaServerModal({ isOpen, onClose, onSave, editingServer }: MediaServerModalProps) {
  const [name, setName] = useState(editingServer?.name || '');
  const [role, setRole] = useState<'main' | 'backup'>(editingServer?.role || 'main');
  const [platform, setPlatform] = useState(editingServer?.platform || MEDIA_SERVER_PLATFORMS[0]);
  const [outputs, setOutputs] = useState<MediaServerOutput[]>(editingServer?.outputs || []);
  const [layers, setLayers] = useState<MediaServerLayer[]>(editingServer?.layers || []);
  const [note, setNote] = useState(editingServer?.note || '');

  const handleAddOutput = () => {
    const newOutput: MediaServerOutput = {
      id: `OUT${outputs.length + 1}`,
      name: `Output ${outputs.length + 1}`,
      type: 'HDMI',
    };
    setOutputs([...outputs, newOutput]);
  };

  const handleRemoveOutput = (id: string) => {
    setOutputs(outputs.filter(o => o.id !== id));
    // Remove this output from all layers
    setLayers(layers.map(layer => ({
      ...layer,
      outputIds: layer.outputIds.filter(outputId => outputId !== id)
    })));
  };

  const handleUpdateOutput = (id: string, updates: Partial<MediaServerOutput>) => {
    setOutputs(outputs.map(o => o.id === id ? { ...o, ...updates } : o));
  };

  const handleAddLayer = () => {
    const newLayer: MediaServerLayer = {
      id: `L${layers.length + 1}`,
      name: `Layer ${layers.length + 1}`,
      content: '',
      outputIds: [],
      spanning: false
    };
    setLayers([...layers, newLayer]);
  };

  const handleRemoveLayer = (id: string) => {
    setLayers(layers.filter(l => l.id !== id));
  };

  const handleUpdateLayer = (id: string, updates: Partial<MediaServerLayer>) => {
    setLayers(layers.map(l => l.id === id ? { ...l, ...updates } : l));
  };

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    onSave({ name, role, platform, outputs, layers, note });
  };

  if (!isOpen) return null;

  return (
    <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
      <div className="bg-av-surface rounded-lg w-full max-w-4xl max-h-[90vh] overflow-y-auto">
        <form onSubmit={handleSubmit}>
          {/* Header */}
          <div className="p-6 border-b border-av-border sticky top-0 bg-av-surface z-10">
            <h2 className="text-2xl font-bold text-av-text">
              {editingServer ? 'Edit Media Server' : 'Add Media Server'}
            </h2>
          </div>

          {/* Content */}
          <div className="p-6 space-y-6">
            {/* Basic Info */}
            <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div className="md:col-span-2">
                <label className="block text-sm font-medium text-av-text mb-2">
                  Server Name *
                </label>
                <input
                  type="text"
                  value={name}
                  onChange={(e) => setName(e.target.value)}
                  className="input-field w-full"
                  required
                />
              </div>
              <div>
                <label className="block text-sm font-medium text-av-text mb-2">
                  Role *
                </label>
                <select
                  value={role}
                  onChange={(e) => setRole(e.target.value as 'main' | 'backup')}
                  className="input-field w-full"
                >
                  <option value="main">Main</option>
                  <option value="backup">Backup</option>
                </select>
              </div>
            </div>

            <div>
              <label className="block text-sm font-medium text-av-text mb-2">
                Platform *
              </label>
              <select
                value={platform}
                onChange={(e) => setPlatform(e.target.value)}
                className="input-field w-full"
              >
                {MEDIA_SERVER_PLATFORMS.map(p => (
                  <option key={p} value={p}>{p}</option>
                ))}
              </select>
            </div>

            {/* Outputs */}
            <div>
              <div className="flex items-center justify-between mb-3">
                <h3 className="text-lg font-semibold text-av-text">Outputs</h3>
                <button
                  type="button"
                  onClick={handleAddOutput}
                  className="btn-primary btn-sm flex items-center gap-2"
                >
                  <Plus className="w-4 h-4" />
                  Add Output
                </button>
              </div>
              <div className="space-y-3">
                {outputs.map((output) => (
                  <Card key={output.id} className="p-4">
                    <div className="grid grid-cols-1 md:grid-cols-6 gap-3">
                      <div className="md:col-span-2">
                        <input
                          type="text"
                          value={output.name}
                          onChange={(e) => handleUpdateOutput(output.id, { name: e.target.value })}
                          placeholder="Output name"
                          className="input-field w-full"
                        />
                      </div>
                      <div>
                        <select
                          value={output.type}
                          onChange={(e) => handleUpdateOutput(output.id, { type: e.target.value as any })}
                          className="input-field w-full"
                        >
                          {OUTPUT_TYPES.map(t => (
                            <option key={t} value={t}>{t}</option>
                          ))}
                        </select>
                      </div>
                      <div>
                        <input
                          type="number"
                          value={output.resolution?.width || ''}
                          onChange={(e) => handleUpdateOutput(output.id, {
                            resolution: { ...output.resolution, width: parseInt(e.target.value) || 0, height: output.resolution?.height || 0 }
                          })}
                          placeholder="Width"
                          className="input-field w-full"
                        />
                      </div>
                      <div>
                        <input
                          type="number"
                          value={output.resolution?.height || ''}
                          onChange={(e) => handleUpdateOutput(output.id, {
                            resolution: { width: output.resolution?.width || 0, height: parseInt(e.target.value) || 0 }
                          })}
                          placeholder="Height"
                          className="input-field w-full"
                        />
                      </div>
                      <div className="flex gap-2">
                        <input
                          type="number"
                          value={output.frameRate || ''}
                          onChange={(e) => handleUpdateOutput(output.id, { frameRate: parseFloat(e.target.value) || undefined })}
                          placeholder="FPS"
                          className="input-field w-full"
                        />
                        <button
                          type="button"
                          onClick={() => handleRemoveOutput(output.id)}
                          className="p-2 rounded hover:bg-av-danger/20 text-av-danger transition-colors"
                        >
                          <Trash2 className="w-4 h-4" />
                        </button>
                      </div>
                    </div>
                  </Card>
                ))}
              </div>
            </div>

            {/* Layers */}
            <div>
              <div className="flex items-center justify-between mb-3">
                <h3 className="text-lg font-semibold text-av-text">Content Layers</h3>
                <button
                  type="button"
                  onClick={handleAddLayer}
                  className="btn-primary btn-sm flex items-center gap-2"
                >
                  <Plus className="w-4 h-4" />
                  Add Layer
                </button>
              </div>
              <div className="space-y-3">
                {layers.map((layer) => (
                  <Card key={layer.id} className="p-4">
                    <div className="space-y-3">
                      <div className="grid grid-cols-1 md:grid-cols-2 gap-3">
                        <input
                          type="text"
                          value={layer.name}
                          onChange={(e) => handleUpdateLayer(layer.id, { name: e.target.value })}
                          placeholder="Layer name"
                          className="input-field w-full"
                        />
                        <input
                          type="text"
                          value={layer.content}
                          onChange={(e) => handleUpdateLayer(layer.id, { content: e.target.value })}
                          placeholder="Content description"
                          className="input-field w-full"
                        />
                      </div>
                      <div className="flex items-center gap-4">
                        <label className="flex items-center gap-2">
                          <input
                            type="checkbox"
                            checked={layer.spanning}
                            onChange={(e) => handleUpdateLayer(layer.id, { spanning: e.target.checked })}
                            className="rounded"
                          />
                          <span className="text-sm text-av-text">Spanning multiple outputs</span>
                        </label>
                        <button
                          type="button"
                          onClick={() => handleRemoveLayer(layer.id)}
                          className="ml-auto p-2 rounded hover:bg-av-danger/20 text-av-danger transition-colors"
                        >
                          <Trash2 className="w-4 h-4" />
                        </button>
                      </div>
                      <div>
                        <label className="block text-sm font-medium text-av-text-muted mb-2">
                          Assigned to outputs:
                        </label>
                        <div className="flex flex-wrap gap-2">
                          {outputs.map(output => (
                            <label key={output.id} className="flex items-center gap-2 bg-av-surface-light px-3 py-2 rounded">
                              <input
                                type="checkbox"
                                checked={layer.outputIds.includes(output.id)}
                                onChange={(e) => {
                                  const newOutputIds = e.target.checked
                                    ? [...layer.outputIds, output.id]
                                    : layer.outputIds.filter(id => id !== output.id);
                                  handleUpdateLayer(layer.id, { outputIds: newOutputIds });
                                }}
                                className="rounded"
                              />
                              <span className="text-sm text-av-text">{output.name}</span>
                            </label>
                          ))}
                        </div>
                      </div>
                    </div>
                  </Card>
                ))}
              </div>
            </div>

            {/* Note */}
            <div>
              <label className="block text-sm font-medium text-av-text mb-2">
                Notes
              </label>
              <textarea
                value={note}
                onChange={(e) => setNote(e.target.value)}
                className="input-field w-full h-24"
                placeholder="Additional notes..."
              />
            </div>
          </div>

          {/* Footer */}
          <div className="p-6 border-t border-av-border flex justify-end gap-3 sticky bottom-0 bg-av-surface">
            <button type="button" onClick={onClose} className="btn-secondary">
              Cancel
            </button>
            <button type="submit" className="btn-primary">
              {editingServer ? 'Update' : 'Create'} Server
            </button>
          </div>
        </form>
      </div>
    </div>
  );
}
