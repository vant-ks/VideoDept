# ==============================================================================
# LOCAL DEVELOPMENT DATABASE
# ==============================================================================
# Your local PostgreSQL database (separate from production!)
# Default: postgresql://username@localhost:5432/video_production
DATABASE_URL="postgresql://kevin@localhost:5432/video_production?schema=public"

# ==============================================================================
# PRODUCTION DATABASE (Railway)
# ==============================================================================
# DO NOT use this in local .env file!
# Railway automatically sets this in production environment
# Example format only:
# DATABASE_URL="postgresql://postgres:PASSWORD@shinkansen.proxy.rlwy.net:25023/railway"

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
PORT=3010
NODE_ENV=development

# Server Discovery (mDNS for LAN servers)
SERVER_NAME="Video Production Server"
ENABLE_MDNS=true

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3011"

# ==============================================================================
# OPTIONAL SETTINGS
# ==============================================================================
# Cloud sync (if connecting to Railway API from local)
# CLOUD_API_URL="https://your-railway-app.up.railway.app"
# SYNC_INTERVAL=60000

# Authentication (future feature)
# JWT_SECRET="your-secret-key-change-this"
