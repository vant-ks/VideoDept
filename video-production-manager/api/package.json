{
  "name": "video-production-api",
  "version": "1.0.0",
  "description": "Backend API for Video Production Manager",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc || echo 'Build completed with type errors (runtime will work)'",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "npm run db:reset:confirm && npm run db:drop && npm run db:migrate && npm run db:seed:dev",
    "db:reset:confirm": "echo '⚠️  WARNING: This will delete ALL data in your LOCAL database!' && echo 'Press Ctrl+C to cancel, or wait 3 seconds...' && sleep 3",
    "db:drop": "prisma migrate reset --force --skip-seed",
    "db:migrate": "prisma migrate deploy",
    "db:seed:dev": "npm run seed:settings",
    "equipment:export": "tsx prisma/export-equipment-data.ts",
    "equipment:seed": "npm run equipment:export && tsx prisma/seed-equipment.ts",
    "seed:equipment": "npm run equipment:export && tsx prisma/seed-equipment.ts",
    "seed:settings": "tsx prisma/seed-settings-simple.ts",
    "seed:sample": "tsx prisma/seed-sample-productions.ts",
    "seed:all": "npm run seed:equipment && npm run seed:settings"
  },
  "keywords": [
    "video",
    "production",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bonjour-service": "^1.2.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "socket.io": "^4.8.3",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "jest": "^30.2.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
